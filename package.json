{
  "name": "@social-net/root",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "prettier": "npx prettier . --write",
    "eslint": "npx eslint . --fix --cache",
    "lint": "yarn eslint .",
    "postinstall": "preconstruct dev && manypkg fix",
    "build": "preconstruct init && preconstruct build && manypkg fix",
    "p:init": "yarn preconstruct init",
    "p:build": "yarn preconstruct build",
    "release": "yarn build && changeset publish",
    "mp:check": "yarn manypkg check",
    "mp:fix": "yarn manypkg fix"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "dependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.18.6",
    "@babel/preset-react": "^7.18.6",
    "@changesets/cli": "^2.5.0",
    "@manypkg/cli": "^0.10.0",
    "@next/eslint-plugin-next": "^11.1.2",
    "@preconstruct/cli": "^2.1.7",
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.1",
    "@types/react-dom": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "eslint": "^8.13.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-next": "^12.1.4",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-babel": "^5.3.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "typescript": "^4.7.4"
  },
  "preconstruct": {
    "packages": [
      "packages/*",
      "apps/*",
      "services/*"
    ]
  }
}
